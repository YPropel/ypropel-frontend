{
  "compilerOptions": {
    "target": "ES2020",                    // Use modern JS features compatible with Node.js 14+
    "module": "CommonJS",                  // Node.js module system
    "strict": true,                       // Enable all strict type checks for safety
    "esModuleInterop": true,              // Allows default imports from CommonJS modules
    "skipLibCheck": true,                 // Skip type checking of all declaration files (speeds up build)
    "forceConsistentCasingInFileNames": true, // Enforce consistent file casing in imports
    "outDir": "./dist",                   // Output folder for compiled JS
    "rootDir": "./",                      // Root folder of source files
    "moduleResolution": "node",           // Module resolution strategy for Node.js
    "resolveJsonModule": true,            // Allow importing JSON files
    "noImplicitAny": false,                // Disable errors on implicit any (adjust as needed)
    "allowJs": false,                     // Do not allow compiling JS files
    "sourceMap": true,                    // Generate source maps for debugging
    "incremental": true,                  // Incremental compilation for faster builds
    "types": ["node", "express"]          // Include typings for Node and Express
  },
  "include": [
    "./**/*.ts",                         // All TS files under project
    "./custom.d.ts"                      // Your custom declaration file (important!)
  ],
  "exclude": [
    "node_modules",                     // Exclude dependencies
    "dist"                             // Exclude compiled output folder
  ]
}
